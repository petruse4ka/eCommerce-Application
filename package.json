{
  "name": "ecommerce-application",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "check": "npm run lint && npm run stylelint && npm run format:check && npm run test",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,css,scss}\"",
    "format:check": "prettier --list-different \"src/**/*.{ts,tsx,js,css,scss}\"",
    "format:fix": "prettier --write --ignore-unknown \"src/**/*.{ts,tsx,js,css,scss}\"",
    "lint": "eslint \"src/**/*.{ts,tsx,js}\" --ext .ts,.tsx,.js",
    "lint:fix": "eslint \"src/**/*.{ts,tsx,js}\" --ext .ts,.tsx,.js --fix",
    "stylelint": "stylelint \"src/**/*.{css,scss}\"",
    "stylelint:fix": "stylelint \"src/**/*.{css,scss}\" --fix",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "deploy": "npm run build && netlify deploy --prod",
    "prepare": "husky .husky",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js}": [
      "npm run lint",
      "npm run format"
    ],
    "src/**/*.{css,scss}": [
      "npm run stylelint",
      "npm run format"
    ]
  },
  "keywords": [],
  "author": "Konstantin Petrov, Daniil Biver, Olga Paklonskaya",
  "license": "ISC",
  "description": "eCommerce Application team project for the RS School JavaScript/Front-end 2024Q4 course",
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/js": "^9.26.0",
    "@tailwindcss/vite": "^4.1.5",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.13.9",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "@vitest/coverage-v8": "^3.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.21.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^57.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.4.3",
    "netlify-cli": "^20.1.1",
    "prettier": "^3.5.1",
    "sass": "^1.85.1",
    "stylelint": "^16.15.0",
    "stylelint-config-clean-order": "^7.0.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "tailwindcss": "^4.1.5",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0",
    "vite": "^6.2.0",
    "vite-plugin-clean": "^2.0.1",
    "vite-plugin-static-copy": "^2.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2"
  }
}
